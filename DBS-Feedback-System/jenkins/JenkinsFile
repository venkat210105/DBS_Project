pipeline {
    agent any

    environment {
        IMAGE_NAME = "dbs-feedback"
        TAG = "latest"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/venkat210105/DBS_Project.git'
            }
        }

        stage('Build Backend') {
            steps {
                bat 'cd DBS-Feedback-System\\backend && mvnw.cmd clean package -DskipTests'
            }
        }

        stage('Run Tests') {
            steps {
                bat 'cd DBS-Feedback-System\\backend && mvnw.cmd test'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t %IMAGE_NAME%:%TAG% DBS-Feedback-System\\docker'
            }
        }
    }

    post {
        success {
            echo 'Pipeline ran successfully.'
        }
        failure {
            echo 'Pipeline failed. Check logs.'
        }
    }
}
